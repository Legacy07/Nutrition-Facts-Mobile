<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhiteSmoke"
    android:orientation="vertical"
    tools:context="com.turkishlegacy.nutritionfactsmobile.AddFood_Fragment">

    <RelativeLayout
        android:id="@+id/groupBoxbannerLayout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/banner_groupbox"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Food"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/groupBoxLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/groupBoxbannerLayout"
        android:background="@drawable/groupbox"
        android:orientation="vertical">

        <EditText
            android:id="@+id/nameTextBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:ems="15"
            android:inputType="textPersonName"
            android:paddingLeft="5dp"
            android:textSize="14sp" />

        <View
            android:id="@+id/nameLine"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/nameTextBox"
            android:background="@color/colorLightGray" />

        <EditText
            android:id="@+id/servingSizeTextBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/nameTextBox"
            android:layout_below="@+id/nameTextBox"
            android:ems="15"
            android:inputType="number"
            android:paddingLeft="5dp"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/nameTextBox"
            android:layout_marginTop="15dp"
            android:text="Name"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:typeface="serif" />


        <TextView
            android:id="@+id/servingSizeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameTextBox"
            android:layout_marginTop="15dp"
            android:text="Serving Size"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:typeface="serif" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/groupBoxbanner2Layout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/groupBoxLayout"
        android:layout_marginTop="10dp"
        android:background="@drawable/banner_groupbox"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nutrition Facts"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/groupBox2Layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/groupBoxbanner2Layout"
        android:background="@drawable/groupbox"
        android:orientation="vertical">

        <EditText
            android:id="@+id/calorieTextBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:ems="15"
            android:inputType="number"
            android:paddingLeft="5dp"
            android:textSize="14sp" />

        <View
            android:id="@+id/caloriesLine"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/calorieTextBox"
            android:background="@color/colorLightGray" />

        <EditText
            android:id="@+id/proteinTextBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/calorieTextBox"
            android:layout_below="@+id/calorieTextBox"
            android:ems="15"
            android:inputType="number"
            android:paddingLeft="5dp"
            android:textSize="14sp" />

        <View
            android:id="@+id/proteinLine"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/proteinTextBox"
            android:background="@color/colorLightGray" />


        <EditText
            android:id="@+id/carbTextBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/proteinTextBox"
            android:layout_below="@+id/proteinTextBox"
            android:ems="15"
            android:inputType="number"
            android:paddingLeft="5dp"
            android:textSize="14sp" />

        <View
            android:id="@+id/carbLine"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/carbTextBox"
            android:background="@color/colorLightGray" />


        <EditText
            android:id="@+id/fatTextBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/carbTextBox"
            android:layout_below="@+id/carbTextBox"
            android:ems="15"
            android:inputType="number"
            android:paddingLeft="5dp"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/caloriesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Calories"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/proteinTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/calorieTextBox"
            android:layout_marginTop="15dp"
            android:text="Protein"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/carbTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/proteinLine"
            android:layout_marginTop="15dp"
            android:text="Carb"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/fatTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/carbLine"
            android:layout_marginTop="15dp"
            android:text="Fat"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:typeface="serif" />


    </RelativeLayout>
</RelativeLayout>
