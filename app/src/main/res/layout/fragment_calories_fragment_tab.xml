<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhiteSmoke"
    android:orientation="vertical"
    tools:context="com.turkishlegacy.nutritionfactsmobile.nutritionsummary_tabs.CaloriesFragmentTab">

    <RelativeLayout
        android:id="@+id/totalCaloriesLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/groupbox">


        <TextView
            android:id="@+id/totalCaloriesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameTextBox"
            android:layout_marginTop="10dp"
            android:text="Total Calories"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:typeface="serif" />

        <View
            android:id="@+id/totalCaloriesline"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/totalCaloriesTextView"
            android:background="@color/colorLightGray" />

        <TextView
            android:id="@+id/totalCalorieFiguresTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:text="0"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/goalCaloriesTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/totalCalorieFiguresTextView"
            android:layout_marginTop="10dp"
            android:text="Goal Calories"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:typeface="serif" />

        <View
            android:id="@+id/totalCaloriesLine"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/goalCaloriesTextview"
            android:background="@color/colorLightGray" />

        <EditText
            android:id="@+id/goalCaloriesFiguresEditText"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/totalCalorieFiguresTextView"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_edittext"
            android:gravity="center_horizontal"
            android:text="2000"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/reaminingCaloriesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/goalCaloriesFiguresEditText"
            android:layout_marginTop="10dp"
            android:text="Remaining Calories"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/remainingCaloriesFiguresTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/goalCaloriesFiguresEditText"
            android:layout_marginTop="10dp"
            android:text="0"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:typeface="serif" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/groupBoxbanner2Layout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/totalCaloriesLayout"
        android:layout_marginTop="10dp"
        android:background="@drawable/banner_groupbox"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nutrients"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/caloriesLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/groupBoxbanner2Layout"
        android:background="@drawable/groupbox"
        android:orientation="vertical">

        <TextView
            android:id="@+id/totalTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_marginTop="0dp"
            android:layout_toLeftOf="@+id/totalGoalTextView"
            android:text="Total"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/totalGoalTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_marginTop="0dp"
            android:layout_toLeftOf="@+id/totalLeftTextView"
            android:text="Goal"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/totalLeftTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"
            android:text="Left"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/proteinTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/calorieTextBox"
            android:layout_marginTop="15dp"
            android:text="Protein"
            android:textColor="#000000"
            android:textSize="14sp"
            android:typeface="serif" />


        <TextView
            android:id="@+id/proteinTotalTextView"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/totalTextView"
            android:layout_marginRight="35dp"
            android:layout_marginTop="0dp"
            android:layout_toLeftOf="@+id/proteinGoalEditText"
            android:text="0"
            android:gravity="right"
            android:textColor="#000000"
            android:textSize="14sp"
            android:typeface="serif" />

        <View
            android:id="@+id/proteinLine"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/proteinTotalTextView"
            android:background="@color/colorLightGray" />

        <EditText
            android:id="@+id/proteinGoalEditText"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/totalTextView"
            android:layout_marginRight="10dp"
            android:layout_marginTop="0dp"
            android:layout_toLeftOf="@+id/proteinLeftTextView"
            android:background="@drawable/rounded_edittext"
            android:gravity="center_horizontal"
            android:paddingHorizontal="5dp"
            android:text="125"
            android:textColor="#000000"
            android:textSize="14sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/proteinLeftTextView"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/totalTextView"
            android:layout_marginTop="0dp"
            android:gravity="right"
            android:text="0"
            android:textColor="#000000"
            android:textSize="14sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/carbTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/proteinLine"
            android:layout_marginTop="10dp"
            android:text="Carb"
            android:textColor="#000000"
            android:textSize="14sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/carbTotalTextView"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/proteinLine"
            android:layout_marginRight="35dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/carbGoalEditText"
            android:text="0"
            android:gravity="right"
            android:textColor="#000000"
            android:textSize="14sp"
            android:typeface="serif" />

        <EditText
            android:id="@+id/carbGoalEditText"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/proteinLine"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/carbLeftTextView"
            android:background="@drawable/rounded_edittext"
            android:gravity="center_horizontal"
            android:paddingHorizontal="5dp"
            android:text="250"
            android:textColor="#000000"
            android:textSize="14sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/carbLeftTextView"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/proteinLine"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:text="0"

            android:textColor="#000000"
            android:textSize="14sp"
            android:typeface="serif" />

        <View
            android:id="@+id/carbLine"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/carbTotalTextView"
            android:background="@color/colorLightGray" />

        <TextView
            android:id="@+id/fatTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/carbLine"
            android:layout_marginTop="10dp"
            android:text="Fat"
            android:textColor="#000000"
            android:textSize="14sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/fatTotalTextView"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/carbLine"
            android:layout_marginRight="35dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/fatGoalEditText"
            android:text="0"
            android:gravity="right"
            android:textColor="#000000"
            android:textSize="14sp"
            android:typeface="serif" />

        <EditText
            android:id="@+id/fatGoalEditText"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/carbLine"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/fatLeftTextView"
            android:background="@drawable/rounded_edittext"
            android:gravity="center_horizontal"
            android:paddingHorizontal="5dp"
            android:text="55"
            android:textColor="#000000"
            android:textSize="14sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/fatLeftTextView"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/carbLine"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:text="0"
            android:textColor="#000000"
            android:textSize="14sp"
            android:typeface="serif" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/groupBoxbanner3Layout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/caloriesLayout"
        android:layout_marginTop="10dp"
        android:background="@drawable/banner_groupbox"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calorie Breakdown"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/calorieBreakdownLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/groupBoxbanner3Layout"
        android:layout_marginBottom="10dp"
        android:background="@drawable/groupbox"
        android:orientation="vertical">

        <TextView
            android:id="@+id/calorieBreakdownProteinTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameTextBox"
            android:layout_marginTop="10dp"
            android:text="Protein"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:typeface="serif" />

        <View
            android:id="@+id/proteinline"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/calorieBreakdownProteinTextView"
            android:background="@color/colorLightGray" />


        <TextView
            android:id="@+id/calorieBreakdownProteinFiguresTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:text="%0"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/calorieBreakdownCarbTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/calorieBreakdownProteinFiguresTextView"
            android:layout_marginTop="10dp"
            android:text="Carb"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/calorieBreakdownCarbFiguresTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/calorieBreakdownProteinFiguresTextView"
            android:layout_marginTop="10dp"
            android:text="%0"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:typeface="serif" />

        <View
            android:id="@+id/calorieBreakdownCarbLine"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/calorieBreakdownCarbFiguresTextView"
            android:background="@color/colorLightGray" />

        <TextView
            android:id="@+id/calorieBreakdownFatTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/calorieBreakdownCarbFiguresTextView"
            android:layout_marginTop="10dp"
            android:text="Fat"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/calorieBreakdownFatFiguresTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/calorieBreakdownCarbFiguresTextView"
            android:layout_marginTop="10dp"
            android:text="%0"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:typeface="serif" />

    </RelativeLayout>

</RelativeLayout>
