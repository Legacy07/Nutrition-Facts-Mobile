<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorControlHighlight"
    android:orientation="vertical"
    tools:context="com.turkishlegacy.nutritionfactsmobile.SearchFragment">

    <RelativeLayout
        android:id="@+id/groupBoxLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/groupbox"
        android:orientation="vertical">

        <EditText
            android:id="@+id/searchTextBox"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/rounded_edittext"
            android:ems="15"
            android:padding="5dp"
            android:hint="Ex: Tuna"
            android:inputType="textPersonName" />

        <View
            android:id="@+id/searchBox"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginLeft="280dp"
            android:background="@drawable/coloured_roundedbox"
            />

        <ImageButton
            android:id="@+id/searchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/searchBox"
            android:layout_marginLeft="-40dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/searchBox"
            android:background="@mipmap/search"
            android:text="Search" />

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/searchButton"
            android:layout_marginTop="16dp" />
    </RelativeLayout>

</LinearLayout>
